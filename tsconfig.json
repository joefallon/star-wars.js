{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "importHelpers": false,
    "inlineSourceMap": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "target": "es5",
    "lib": [ "es6", "dom", "webworker", "scripthost" ]
  },
  "include": [
    "./typings/custom.d.ts", "./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}